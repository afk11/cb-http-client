{
  "name": "cb-http-client",
  "version": "0.3.0",
  "description": "Common-blockchain HTTP client for a cb-http-router",
  "main": "./index.js",
  "scripts": {
    "coverage": "mocha --require blanket -R travis-cov",
    "coverage-local": "mocha --require blanket -R html-cov",
    "standard": "standard",
    "test": "npm run standard && npm run unit",
    "unit": "mocha"
  },
  "config": {
    "blanket": {
      "pattern": [""],
      "data-cover-never": ["node_modules", "test"]
    },
    "travis-cov": {
      "threshold": 100
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/common-blockchain/cb-http-client.git"
  },
  "author": "Daniel Cousens",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/common-blockchain/cb-http-client/issues"
  },
  "homepage": "https://github.com/common-blockchain/cb-http-client",
  "dependencies": {
    "httpify": "^1.0.0",
    "jsend": "^0.1.2"
  },
  "devDependencies": {
    "cb-tester": "^0.2.x",
    "blanket": "*",
    "mocha": "*",
    "standard": "*",
    "travis-cov": "*"
  }
}
